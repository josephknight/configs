clear Lock
clear Shift
clear Control
clear Mod1 
clear Mod4
! exc key
keycode   9 = Escape NoSymbol Escape
! ctrl keys
keycode  37 = Alt_L Meta_L Alt_L Meta_L
keycode 105 = Alt_R Meta_R Alt_R Meta_R
! shift keys
keycode  50 = Shift_L Caps_Lock Shift_L Caps_Lock
keycode  62 = Shift_R Caps_Lock Shift_R Caps_Lock
! capslock
keycode  66 = Escape NoSymbol Escape
! alt keys
keycode  64 = Super_L Super_L Super_L
keycode 108 = Super_R Super_R Super_R
! super keys
keycode 133 = Control_L Control_L Control_L
keycode 134 = Control_R Control_R Control_R
! misc uncommon keys included because of their reference to modifier functions.
keycode 204 = NoSymbol Alt_L NoSymbol Alt_L
keycode 205 = NoSymbol Meta_L NoSymbol Meta_L
keycode 206 = NoSymbol Super_L NoSymbol Super_L
keycode 207 = NoSymbol Hyper_L NoSymbol Hyper_L
add Shift = Shift_L Shift_R
! ASSIGNMENT
! Skip Lock assignment, these assigments are for modifiers and we 
! don't want the Lock (capslock) key to be a modifier anymore.
add Control = Control_L Control_R
add Mod1 = Alt_L Alt_R
add Mod4 = Super_L Super_R Hyper_L

pointer = 1 2 3 5 4 7 6 8 9 10 11 12
